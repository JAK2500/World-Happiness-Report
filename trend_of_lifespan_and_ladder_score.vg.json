{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 750,
  "height": 450,
  "data": {
    "url": "https://raw.githubusercontent.com/JAK2500/World-Happiness-Report/main/world-happiness-report.csv"
  },
  "config": {
    "style": {
      "cell": {
        "stroke": "transparent"
      }
    },
    "legend": { "labelFontSize": 12, "labelLimit": 300 }
  },
  "selection": {
    "region_highlight": {
      "type": "multi",
      "fields": ["Regional indicator"],
      "bind": "legend"
    }
  },
  "params": [
    {
      "name": "Year_select",
      "value": 2006,
      "bind": {
        "input": "range",
        "min": 2006,
        "max": 2020,
        "step": 1,
        "name": "Year: "
      }
    },
    {
      "name": "Region_selection",
      "bind": {
        "input": "select",
        "options": [
          null,
          "Central and Eastern Europe",
          "Commonwealth of Independent States",
          "East Asia",
          "Latin America and Caribbean",
          "Middle East and North Africa",
          "North America and ANZ",
          "South Asia",
          "Southeast Asia",
          "Sub-Saharan Africa",
          "Western Europe"
        ],
        "labels": [
          "Show All",
          "Central and Eastern Europe",
          "Commonwealth of Independent States",
          "East Asia",
          "Latin America and Caribbean",
          "Middle East and North Africa",
          "North America and ANZ",
          "South Asia",
          "Southeast Asia",
          "Sub-Saharan Africa",
          "Western Europe"
        ],
        "name": "Region Selection: "
      }
    }
  ],
  "transform": [
    {
      "filter": "Region_selection == null || datum['Regional indicator'] == Region_selection"
    },
    {
      "filter": "datum.year == Year_select"
    }
  ],
  "encoding": {
    "x": {
      "field": "Life Ladder",
      "type": "quantitative",
      "title": "Happiness Score",
      "axis": {
        "tickCount": 4,
        "grid": false,
        "labelFontSize": 14,
        "titleFontSize": 15
      },
      "scale": { "domain": [2, 8.5] }
    },
    "y": {
      "field": "Healthy life expectancy at birth",
      "type": "quantitative",
      "title": "Life Expectancy",
      "axis": {
        "tickCount": 8,
        "grid": false,
        "labelFontSize": 14,
        "titleFontSize": 15
      }
    }
  },
  "layer": [
    {
      "selection": {
        "region_highlight": {
          "type": "multi",
          "fields": ["Regional indicator"],
          "bind": "legend"
        }
      },
      "mark": { "type": "circle", "size": 90 },
      "encoding": {
        "color": {
          "field": "Regional indicator",
          "type": "nominal",
          "scale": {
            "domain": [
              "Central and Eastern Europe",
              "Commonwealth of Independent States",
              "East Asia",
              "Latin America and Caribbean",
              "Middle East and North Africa",
              "North America and ANZ",
              "South Asia",
              "Southeast Asia",
              "Sub-Saharan Africa",
              "Western Europe"
            ],
            "range": [
              "#00aaff",
              "#1f78b4",
              "#83c049",
              "#33a02c",
              "#b16e6d",
              "#e31a1c",
              "#d19e5c",
              "#ff7f00",
              "#ad83c2",
              "#6a3d9a"
            ]
          },
          "legend": { "title": "Region", "titleFontSize": 14 }
        },
        "opacity": {
          "condition": {
            "selection": "region_highlight",
            "value": 0.9
          },
          "value": 0.4
        },
        "tooltip": [
          {
            "field": "Country name",
            "type": "nominal",
            "title": "Country"
          },
          {
            "field": "Life Ladder",
            "type": "quantitative",
            "title": "Happiness Score",
            "format": ".2f"
          },
          {
            "field": "Healthy life expectancy at birth",
            "type": "quantitative",
            "title": "Life Expectancy",
            "format": ".2f"
          }
        ]
      }
    }
  ]
}
