{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 750,
  "height": 500,

  "config": {
    "style": {
      "cell": {
        "stroke": "transparent"
      }
    },

    "legend": { "labelFontSize": 12, "padding": 10, "labelLimit": 300 }
  },

  "data": {
    "url": "https://raw.githubusercontent.com/JAK2500/World-Happiness-Report/main/world-happiness-report.csv"
  },
  "params": [
    { "name": "select", "select": "point" },
    {
      "name": "Region_selection",
      "bind": {
        "input": "select",
        "options": [
          null,
          "Central and Eastern Europe",
          "Commonwealth of Independent States",
          "East Asia",
          "Latin America and Caribbean",
          "Middle East and North Africa",
          "North America and ANZ",
          "South Asia",
          "Southeast Asia",
          "Sub-Saharan Africa",
          "Western Europe"
        ],
        "labels": [
          "Show All",
          "Central and Eastern Europe",
          "Commonwealth of Independent States",
          "East Asia",
          "Latin America and Caribbean",
          "Middle East and North Africa",
          "North America and ANZ",
          "South Asia",
          "Southeast Asia",
          "Sub-Saharan Africa",
          "Western Europe"
        ],
        "name": "Region: "
      }
    }
  ],
  "transform": [
    {
      "filter": "Region_selection == null || datum['Regional indicator'] == Region_selection"
    }
  ],

  "mark": { "type": "line", "point": { "filled": true }, "cursor": "pointer" },
  "encoding": {
    "x": {
      "field": "year",
      "type": "temporal",
      "axis": { "grid": false, "labelFontSize": 14, "titleFontSize": 15 },
      "title": "Year"
    },

    "y": {
      "aggregate": "mean",
      "field": "Life Ladder",
      "type": "quantitative",
      "axis": { "grid": false, "labelFontSize": 14, "titleFontSize": 15 },
      "scale": { "domain": [2, 8] },
      "title": "Average Happiness Score"
    },
    "color": {
      "field": "Regional indicator",
      "type": "nominal",
      "scale": {
        "domain": [
          "Central and Eastern Europe",
          "Commonwealth of Independent States",
          "East Asia",
          "Latin America and Caribbean",
          "Middle East and North Africa",
          "North America and ANZ",
          "South Asia",
          "Southeast Asia",
          "Sub-Saharan Africa",
          "Western Europe"
        ],
        "range": [
          "#00aaff",
          "#1f78b4",
          "#83c049",
          "#33a02c",
          "#b16e6d",
          "#e31a1c",
          "#d19e5c",
          "#ff7f00",
          "#ad83c2",
          "#6a3d9a"
        ]
      },
      "legend": { "title": "Region", "titleFontSize": 14 }
    },
    "opacity": {
      "condition": {
        "param": "select",
        "value": 1
      },
      "value": 0.4
    },

    "tooltip": [
      { "field": "Regional indicator", "type": "nominal", "title": "Region" },
      {
        "field": "Life Ladder",
        "aggregate": "mean",
        "type": "quantitative",
        "format": ".2f",
        "title": "Average Happiness Score"
      },
      { "field": "year", "type": "temporal", "format": "%Y", "title": "Year" }
    ]
  }
}
