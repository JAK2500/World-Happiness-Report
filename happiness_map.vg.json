{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 800,
  "height": 500,

  "data": {
    "url": "https://raw.githubusercontent.com/JAK2500/World-Happiness-Report/main/ne_110m_admin_0_countries.json",
    "format": { "type": "topojson", "feature": "ne_110m_admin_0_countries" }
  },

  "projection": { "type": "equalEarth" },

  "layer": [
    {
      "mark": { "type": "geoshape", "fill": "lightgray", "stroke": "white" },
      "encoding": {
        "tooltip": {
          "field": "properties.NAME"
        }
      }
    },
    {
      "transform": [
        {
          "lookup": "properties.NAME",
          "from": {
            "data": {
              "url": "https://raw.githubusercontent.com/JAK2500/World-Happiness-Report/main/world-happiness-report-2021.csv"
            },
            "key": "Country name",
            "fields": ["Ladder score"]
          }
        }
      ],
      "params": [
        {
          "name": "highlight",
          "select": { "type": "point", "on": "mouseover" }
        },
        { "name": "select", "select": "point" }
      ],
      "mark": { "type": "geoshape", "stroke": "black" },
      "encoding": {
        "color": {
          "field": "Ladder score",
          "type": "quantitative",
          "scale": {
            "type": "threshold",
            "domain": [3, 4, 5, 6, 7],
            "range": [
              "#b2182b",
              "#ef8a62",
              "#fddbc7",
              "#d1e5f0",
              "#67a9cf",
              "#2166ac"
            ]
          },
          "legend": { "title": "Ladder Score", "titleFontSize": 14 }
        },
        "strokeWidth": {
          "condition": [
            {
              "param": "select",
              "empty": false,
              "value": 2
            },
            {
              "param": "highlight",
              "empty": false,
              "value": 1
            }
          ],
          "value": 0
        },
        "tooltip": [
          { "field": "properties.NAME", "type": "nominal", "title": "Country" },
          {
            "field": "Ladder score",
            "type": "quantitative",
            "format": ".2f",
            "title": "Ladder Score"
          }
        ]
      }
    }
  ],
  "config": {
    "style": {
      "cell": {
        "stroke": "transparent"
      }
    }
  }
}
