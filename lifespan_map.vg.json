{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 800,
  "height": 500,

  "data": {
    "url": "https://raw.githubusercontent.com/JAK2500/World-Happiness-Report/main/ne_110m_admin_0_countries.json",
    "format": { "type": "topojson", "feature": "ne_110m_admin_0_countries" }
  },

  "projection": { "type": "equalEarth" },

  "layer": [
    {
      "mark": { "type": "geoshape", "fill": "lightgray", "stroke": "white" },
      "encoding": {
        "tooltip": {
          "field": "properties.NAME"
        }
      }
    },
    {
      "transform": [
        {
          "lookup": "properties.NAME",
          "from": {
            "data": {
              "url": "https://raw.githubusercontent.com/JAK2500/World-Happiness-Report/main/world-happiness-report-2021.csv"
            },
            "key": "Country name",
            "fields": ["Healthy life expectancy"]
          }
        }
      ],
      "params": [
        {
          "name": "highlight",
          "select": { "type": "point", "on": "mouseover" }
        },
        { "name": "select", "select": "point" }
      ],
      "mark": { "type": "geoshape", "stroke": "black" },
      "encoding": {
        "color": {
          "field": "Healthy life expectancy",
          "type": "quantitative",
          "scale": {
            "type": "threshold",
            "domain": [50, 55, 60, 65, 70, 75],
            "range": [
              "#feebe2",
              "#fcc5c0",
              "#fa9fb5",
              "#f768a1",
              "#dd3497",
              "#ae017e",
              "#7a0177"
            ]
          },
          "legend": { "title": "Life Expectancy", "titleFontSize": 14 }
        },

        "strokeWidth": {
          "condition": [
            {
              "param": "select",
              "empty": false,
              "value": 2
            },
            {
              "param": "highlight",
              "empty": false,
              "value": 1
            }
          ],
          "value": 0
        },
        "tooltip": [
          { "field": "properties.NAME", "type": "nominal", "title": "Country" },
          {
            "field": "Healthy life expectancy",
            "type": "quantitative",
            "format": ".2f",
            "title": "Life Expectancy"
          }
        ]
      }
    }
  ],
  "config": {
    "style": {
      "cell": {
        "stroke": "transparent"
      }
    }
  }
}
